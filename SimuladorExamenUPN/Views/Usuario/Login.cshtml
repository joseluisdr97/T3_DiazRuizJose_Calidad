
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<h2 id="EstoyEnLogin"></h2>
<div class="row">
    
    <div class="col-md-4 offset-4">
        <h2>Iniciar Sesión</h2>
        <br />
        <p>@ViewBag.Validation</p>
        <form method="post" action="/Usuario/Login">

            <div class="form-group">
                <label>Usuario</label>
                <input id="input1" class="form-control" type="text" name="Username"/>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input id="input2" class="form-control" type="password" name="Password"/>
            </div>

            <button id="boton" class="btn btn-primary">Iniciar Sesión</button>

        </form>
    </div>

</div>   